{
    "version": 2,
    "builds": [
        {
            "src": "app.py",
            "use": "@vercel/python",
            "config": {
                "runtime": "python3.7",
                "buildCommand": "pip install -r requirements.txt && python -c \"import nltk; nltk.download('punkt', download_dir='./nltk_data')\"",
                "outputDirectory": "."
            }
        },
        {
            "src": "static/**",
            "use": "@vercel/static"
        },
        {
            "src": "templates/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/static/(.*)",
            "dest": "/static/$1"
        },
        {
            "src": "/(.*)",
            "dest": "/app.py"
        }
    ],
    "env": {
        "FLASK_ENV": "production",
        "PYTHONPATH": "."
    }
}